<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardDoaActivity">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/rlbackgroundijo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kotakzikir"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="220dp"
           android:layout_marginTop="50dp"
            android:text="Do'a dan dzikir App"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_doa"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/tvjuduldoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilihan do'a Dan Dzikir"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="150dp"
            android:textColor="#6DC171"
            android:layout_below="@+id/rlbackgroundijo"
            />
        <Button
            android:id="@+id/butonijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlbackgroundijo"
            android:layout_alignParentEnd="true"
            android:text="Selengkapnya"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:textSize="12sp"
            android:backgroundTint="#6EBC69"
            android:layout_marginEnd="20dp"/>
        <ScrollView
            android:id="@+id/sv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/butonijo"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


            </androidx.recyclerview.widget.RecyclerView>


        </ScrollView>


    </RelativeLayout>

</RelativeLayout>