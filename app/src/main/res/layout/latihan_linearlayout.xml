<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gambar1" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/tvProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambar1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="29dp"
        android:text="Gundam Barbatos"
        android:textColor="#535353"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProduk"
        android:layout_marginStart="25dp"
        android:text="$50.00"
        android:textColor="#FF9800"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/Favorite"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tvProduk"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/baseline_favorite_24" />

    <ImageButton
        android:id="@+id/star1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_star_rate_24"
        android:backgroundTint="#fbc020" />

    <ImageButton
        android:id="@+id/star2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/star1"
        android:background="@drawable/baseline_star_rate_24"
        android:backgroundTint="#fbc020" />

    <ImageButton
        android:id="@+id/star3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/star2"
        android:background="@drawable/baseline_star_rate_24"
        android:backgroundTint="#fbc020" />

    <ImageButton
        android:id="@+id/star4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/star3"
        android:background="@drawable/baseline_star_rate_24"
        android:backgroundTint="#fbc020" />

    <ImageButton
        android:id="@+id/star5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvPrice"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/star4"
        android:background="@drawable/baseline_star_rate_24"
        android:backgroundTint="#808080" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/star5"
        android:text="4.0"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvRate"
        android:layout_marginTop="50dp"
        android:background="#CDCDCD" />

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garis"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Brand "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brand"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Tipe "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dimensi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Location "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Namalokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Namadimensi"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/brand"
        android:text="Bandai"
        android:textColor="#3E3E3E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dimensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipe"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Dimensions "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Namabrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garis"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/brand"
        android:text="Pxfuel "
        android:textColor="#3E3E3E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Namatipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brand"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/brand"
        android:text="Gundam BARBATOS "
        android:textColor="#3E3E3E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Namadimensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Namatipe"
        android:layout_marginStart="101dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tipe"
        android:text="50cm x 45 cm"
        android:textColor="#3E3E3E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FF9800"
        android:text="Purchase"
        android:textSize="17sp" />
</RelativeLayout>