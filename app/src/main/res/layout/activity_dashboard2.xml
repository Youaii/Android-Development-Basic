<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">
     <ImageButton
         android:id="@+id/ibMenu"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:background="@drawable/baseline_sort_24"
         android:layout_marginStart="20dp"
         android:layout_marginTop="20dp"
         />

     <ImageView
         android:id="@+id/ivBackground"
         android:layout_width="250dp"
         android:layout_height="350dp"
         android:layout_alignParentEnd="true"
         android:background="@drawable/latihan_rectangle" />

     <ImageView
         android:id="@+id/gundam"
         android:layout_width="wrap_content"
         android:layout_height="350dp"
         android:layout_marginStart="50dp"
         android:scaleType="centerCrop"
         android:src="@drawable/gambar1" />
     <TextView
         android:id="@+id/sale"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="BIG SALE"
         android:textSize="20sp"
         android:textColor="#FF9800"
         android:layout_marginTop="200dp"
         android:layout_marginStart="25dp"
         android:layout_below="@+id/ibMenu"/>

     <TextView
         android:id="@+id/tvdiskon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="10%"
         android:letterSpacing="0.1"
         android:textStyle="bold"
         android:textSize="40sp"
         android:textColor="#FF9800"
         android:layout_marginStart="25dp"
         android:layout_below="@+id/sale"
          />
     <TextView
         android:id="@+id/tvlimit"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="*Limited Time"
         android:textColor="#8F8E8E"
         android:layout_marginStart="25dp"
         android:layout_below="@+id/tvdiskon"
         />
     <View
         android:id="@+id/garis"
         android:layout_width="match_parent"
         android:layout_height="5dp"
         android:background="#E1D9D9"
         android:layout_below="@id/tvlimit"
         android:layout_marginTop="50dp"
         />
     <TextView
         android:id="@+id/tvPopular"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Popular"
         android:textSize="20sp"
         android:textStyle="bold"
         android:layout_marginTop="20dp"
         android:layout_marginStart="30dp"
         android:layout_below="@id/garis"
         android:textColor="#FF9800"
          />
     <TextView
         android:id="@+id/tvNewArrival"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="New Arrival"
         android:textSize="20sp"
         android:textStyle="bold"
         android:layout_marginTop="20dp"
         android:layout_marginStart="50dp"
         android:layout_below="@+id/garis"
         android:layout_centerHorizontal="true"
         android:textColor="#CCC0C0"
         />
     <TextView
         android:id="@+id/tvBrand"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Brand"
         android:textSize="20sp"
         android:textStyle="bold"
         android:layout_marginTop="20dp"
         android:layout_marginStart="60dp"
         android:layout_below="@+id/garis"
         android:layout_toRightOf="@+id/tvNewArrival"
         android:textColor="#CCC0C0"
         />

     <androidx.cardview.widget.CardView
         android:id="@+id/card1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:cardCornerRadius="24dp"
         android:layout_marginStart="20dp"
         android:layout_marginTop="20dp"
         android:layout_below="@+id/tvPopular"
         >
          <ImageView
              android:id="@+id/ivPicture1"
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:src="@drawable/gundam"
              android:scaleType="centerCrop"
              android:clipToOutline="true"/>



     </androidx.cardview.widget.CardView>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Gundam Barbatos"
         android:textStyle="bold"
         android:textSize="18sp"
         android:textColor="@color/black"
         android:layout_below="@+id/tvNewArrival"
         android:layout_marginTop="20dp"
         android:layout_marginStart="20dp"
         android:layout_toRightOf="@+id/card1"
         />
     <TextView
         android:id="@+id/bandai"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="BANDAI"
         android:textSize="15sp"
         android:textColor="#939292"
         android:layout_below="@+id/tvNewArrival"
         android:layout_marginTop="45dp"
         android:layout_marginStart="20dp"
         android:layout_toRightOf="@+id/card1"
         />
     <TextView
         android:id="@+id/harga1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="$81,59"
         android:letterSpacing="0.1"
         android:textSize="20sp"
         android:textColor="#FF9800"
         android:layout_below="@+id/bandai"
         android:layout_marginTop="20dp"
         android:layout_marginStart="20dp"
         android:layout_toRightOf="@+id/card1"
         />
     <androidx.cardview.widget.CardView
         android:id="@id/card2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:cardCornerRadius="24dp"
         android:layout_marginStart="20dp"
         android:layout_marginTop="20dp"
         android:layout_below="@+id/card1"
         tools:ignore="NotSibling">
          <ImageView
              android:id="@+id/ivPicture2"
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:clipToOutline="true"
              android:scaleType="centerCrop"
              android:src="@drawable/barbatos" />
</androidx.cardview.widget.CardView>
     <TextView
         android:id="@+id/produk2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textStyle="bold"
         android:text="Gundam Barbatos 2"
         android:textSize="18sp"
         android:textColor="@color/black"
         android:layout_below="@+id/harga1"
         android:layout_marginTop="50dp"
         android:layout_marginStart="20dp"
         android:layout_toRightOf="@+id/card2"
         />
     <TextView
         android:id="@+id/bandai2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="BANDAI"
         android:textSize="15sp"
         android:textColor="#939292"
         android:layout_below="@+id/produk2"

         android:layout_marginStart="20dp"
         android:layout_toRightOf="@+id/card2"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="$81,59"
         android:letterSpacing="0.1"
         android:textSize="20sp"
         android:textColor="#FF9800"
         android:layout_below="@+id/bandai2"
         android:layout_marginTop="20dp"
         android:layout_marginStart="20dp"
         android:layout_toRightOf="@+id/card2"
         />

</RelativeLayout>