<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivdestinasi"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/swiss_destination"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                />
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lampung"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/ivdestinasi"
            android:layout_centerHorizontal="true"
            />

            <TextView
                android:id="@+id/tvdesk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLocation"
                android:text="Amazing view can be enjoyed from above of refreshing city"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                />
            <ImageView
                android:id="@+id/ivlokasi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/baseline_location_on_24"
                android:layout_below="@+id/tvdesk"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/tvnegara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indonesia"
                android:layout_toRightOf="@id/ivlokasi"
                android:layout_below="@id/tvdesk"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_price_check_24"
                android:layout_below="@+id/tvdesk"
                android:layout_toRightOf="@+id/tvnegara"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 / Package"
                android:layout_below="@id/tvdesk"
                android:layout_alignParentEnd="true"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Plan Trip Now"
        />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>